<odoo>
    <template id="portal_order_metagraph" inherit_id="sale.portal_my_orders">
        <!-- Assuming 'sale.portal_my_orders' defines a section where orders are displayed -->
        <!-- You must ensure the XPath targets an existing element in the parent view where you want to insert your content -->
        <xpath expr="//div[contains(@class, 'o_my_order_details')]" position="after">
            <div class="container mt16 mb16">
                <h3>DAG Transactions</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Transaction Hash</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody t-foreach="order.metagraph_ids" t-as="metagraph">
                        <tr>
                            <td t-esc="metagraph.name"/>
                            <td t-esc="metagraph.blockchain_status"/>
                            <td t-esc="metagraph.transaction_hash"/>
                            <td t-esc="metagraph.amount"/>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
