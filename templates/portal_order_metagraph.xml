<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_order_metagraph" inherit_id="sale.sale_order_portal_content_totals_table">
        <xpath expr="//table[@class='table table-sm']" position="after"> <!-- Adjust the position as needed -->
            <section class="mt-5">
                <h3>DAG Transactions</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Transaction Hash</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody t-if="order and order.metagraph_ids">
                        <tr t-foreach="order.metagraph_ids" t-as="metagraph">
                            <td t-esc="metagraph.name"/>
                            <td t-esc="metagraph.blockchain_status"/>
                            <td t-esc="metagraph.transaction_hash"/>
                            <td t-esc="metagraph.amount"/>
                        </tr>
                    </tbody>
                    <tbody t-if="not order or not order.metagraph_ids">
                        <tr>
                            <td colspan="4">No DAG Transactions available.</td>
                        </tr>
                    </tbody>

                </table>
            </section>
        </xpath>
    </template>
</odoo>

