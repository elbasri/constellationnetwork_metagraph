<odoo>
    <template id="portal_order_metagraph" inherit_id="sale.portal_my_orders">
        <xpath expr="//t[@t-if='orders']" position="inside">
            <div class="container mt16 mb16">
                <h3>DAG Transactions</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Transaction Hash</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody t-foreach="orders" t-as="order">
                        <tr t-if="order.metagraph_ids">
                            <td colspan="4">
                                <table>
                                    <tbody t-foreach="order.metagraph_ids" t-as="metagraph">
                                        <tr>
                                            <td t-esc="metagraph.name"/>
                                            <td t-esc="metagraph.blockchain_status"/>
                                            <td t-esc="metagraph.transaction_hash"/>
                                            <td t-esc="metagraph.amount"/>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr t-if="not order.metagraph_ids">
                            <td colspan="4">No DAG Transactions available.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
